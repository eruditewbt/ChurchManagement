<!-- views/admin/dashboard.hbs -->

<div class="admin-dashboard">
  <h1>Admin Dashboard</h1>
  <div class="row">
    <div class="col-md-6">
      <h2>Users</h2>
      <table class="table table-striped user-table" id="admin-users-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
            <tr>
              <td>{{this.id}}</td>
              <td>{{this.NAME}}</td>
              <td>{{this.EMAIL}}</td>
              <td>
                <button
                  class="btn btn-primary edit-user-btn"
                  data-user-id="{{this.id}}"
                  type="button"
                >Edit</button>
                <a href="/admin/users/delete/{{this.id}}?agent={{agent}}">Delete</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <!-- Modal for update-user form -->
    <div id="update-user-modal" class="modal">
      <div class="modal-content" id="update-user-modal-content">
        <span
          class="close modal-close"
          id="close-update-user-modal"
        >&times;</span>
        <div id="update-user-form-container"></div>
      </div>
    </div>
    
    <div class="col-md-6">
      <h2>Activities</h2>
      <table
        class="table table-striped activity-table"
        id="admin-activities-table"
      >
        <thead>
          <tr>
            <th>ID</th>
            <th>Activity Type</th>
            <th>Date</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody>
          {{#each activities}}
            <tr>
              <td>{{this.id}}</td>
              <td>{{this.ACTIVITYTYPE}}</td>
              <td>{{this.DATE}}</td>
              <td>{{this.TIME}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>